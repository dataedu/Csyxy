<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/core_title"/>

    <LinearLayout
        android:id="@+id/warn_main"
        android:layout_width="match_parent"
        android:layout_height="30dip"
        android:background="#f8b551"
        android:gravity="center_vertical"
        android:visibility="gone">
        <ImageView
            android:layout_width="16dip"
            android:layout_height="16dip"
            android:src="@mipmap/warn"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:text="当前网络不可用，请检查你的网络设置"
            android:textSize="12sp"/>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:fitsSystemWindows="false"
        android:orientation="vertical"
        android:id="@+id/activity_main_ui">

        <FrameLayout
            android:id="@+id/main_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="58dp" />

        <fragment
            android:id="@+id/fag_nav"
            android:name="com.dk.edu.csyxy.fragment.NavFragment"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:layout_gravity="bottom" />

    </FrameLayout>

</LinearLayout>
