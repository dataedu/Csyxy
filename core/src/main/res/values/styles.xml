<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoTitle" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!--透明，有任务栏电量时间等-->
    <style name="NoTitleTranslucentTheme" parent="FullScreenTheme">
        <item name="android:windowBackground">@color/black50</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <!--全屏-->
    <style name="FullScreenTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="but_back">
        <item name="android:paddingLeft">8dip</item>
        <item name="android:text"> 返回</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">16sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@mipmap/back_press</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
    </style>

    <style name="login_back">
        <item name="android:paddingLeft">8dip</item>
        <item name="android:text"> 返回</item>
        <item name="android:textColor">#212121</item>
        <item name="android:textSize">16sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@mipmap/back_press_black</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
    </style>

    <style name="login_title_txt">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">15sp</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="setting_txt">
        <item name="android:textColor">#212121</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginLeft">10.0dip</item>
        <item name="android:layout_marginTop">12.5dip</item>
        <item name="android:layout_marginBottom">12.5dip</item>
    </style>

    <style name="setting_img_into">
        <item name="android:layout_width">7dp</item>
        <item name="android:layout_height">11dp</item>
        <item name="android:layout_marginLeft">10.0dip</item>
        <item name="android:layout_marginRight">10.0dip</item>
    </style>

    <style name="setting_img">
        <item name="android:layout_width">22dp</item>
        <item name="android:layout_height">22dp</item>
    </style>

    <style name="rcap_but_back">
        <item name="android:paddingLeft">8dip</item>
        <item name="android:text"> 返回</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">16sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@mipmap/back_press</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
    </style>

    <style name="title_txt">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
    </style>


    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Transparent" parent="AppTheme.NoActionBar">

    </style>

</resources>
